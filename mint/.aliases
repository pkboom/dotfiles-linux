alias dev='npm run dev'
alias watch='npm run watch'

alias pbcopy='xclip -sel clip'

curll() { curl http://localhost:8000/$1 }
cds() { cd /opt/lampp/htdocs && ls; }
vs() { cd /opt/lampp/htdocs/$1 && code .; }
art() {
    if [ -n "$1" ]; then # If command line argument is present
        if [ $1 = "tinker" ]; then
            rlwrap php artisan tinker
        else
            php artisan $@
        fi
    else
        php artisan
    fi
}

dir=${PWD##*/}
server="htdocs"
project="project"
if [ "$server" = "$dir" ] || [ "$project" = "$dir" ]; then
    ls
fi
