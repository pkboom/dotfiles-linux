alias gs="git status"
alias gc="git commit -m"
alias gca="git commit -ma"
alias ga="git add ."
alias gl='git log --decorate --oneline --graph --all'
alias nah="git reset --hard && git clean -df"
alias wip="git add . && git commit -m 'wip'"
